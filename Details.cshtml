@model Berber.Models.Randevu

<h2>Randevu Detayları</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Hizmet: @Model.hizmet?.Ad</h5>
        <p class="card-text">Çalışan: @Model.calisan?.Ad</p>
        <p class="card-text">Tarih: @Model.RndvTarih.ToShortDateString()</p>
        <p class="card-text">Durum: @Model.Onay</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
