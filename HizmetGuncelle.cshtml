@model Berber.Models.Hizmet

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-pencil-fill"></i> Hizmet Güncelle</h2>
        <a href="@Url.Action("Hizmetler", "Admin")" class="btn btn-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow-sm p-4">
        <form asp-action="HizmetGuncelle" method="post">
            <input type="hidden" asp-for="HizmetId" />

            <div class="mb-3">
                <label for="Ad" class="form-label"><i class="bi bi-tag-fill"></i> Hizmet Adı</label>
                <input asp-for="Ad" class="form-control border-primary rounded-pill" id="Ad" placeholder="Hizmet adı giriniz..." />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Ucret" class="form-label"><i class="bi bi-currency-dollar"></i> Ücret</label>
                <input asp-for="Ucrt" class="form-control border-primary rounded-pill" id="Ucret" type="number" step="0.01" placeholder="Hizmet ücreti giriniz..." />
                <span asp-validation-for="Ucrt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="SureDakika" class="form-label"><i class="bi bi-clock-fill"></i> Süre (Dakika)</label>
                <input asp-for="SrDk" class="form-control border-primary rounded-pill" id="SureDakika" type="number" placeholder="Hizmet süresi (dakika) giriniz..." />
                <span asp-validation-for="SrDk" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success rounded-pill px-4">
                    <i class="bi bi-check-circle"></i> Güncelle
                </button>
                <a asp-action="Hizmetler" class="btn btn-secondary rounded-pill px-4">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>
