@model Berber.Models.Randevu

<h2>Randevu Düzenle</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()

    <input asp-for="RandevuId" type="hidden" />
    <div class="form-group">
        <label asp-for="MusteriAd" class="control-label">Müşteri Adı</label>
        <input asp-for="MusteriAd" class="form-control" />
        <span asp-validation-for="MusteriAd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select asp-for="CalisanId" asp-items="ViewBag.CalisanId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="HizmetId">Hizmet</label>
        <select asp-for="HizmetId" asp-items="ViewBag.HizmetId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="RndvTarih">Tarih</label>
        <input asp-for="RndvTarih" type="date" class="form-control" />
    </div>
   
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
