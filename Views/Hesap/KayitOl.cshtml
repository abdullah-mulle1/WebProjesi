@model Berber.ViewModels.KayitOlViewModel

<h2 class="text-center">Kayıt Ol</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="KayitOl" method="post" class="mt-4">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı adınızı girin" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Eposta" class="form-label">E-posta</label>
        <input asp-for="Eposta" class="form-control" type="email" placeholder="E-posta adresinizi girin" />
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Parola" class="form-label">Parola</label>
        <input asp-for="Parola" class="form-control" type="password" placeholder="Parolanızı girin" />
        <span asp-validation-for="Parola" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="ParolaOnay" class="form-label">Parola Onay</label>
        <input asp-for="ParolaOnay" class="form-control" type="password" placeholder="Parolanızı tekrar girin" />
        <span asp-validation-for="ParolaOnay" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="GirisYap" class="btn btn-link">Hesabınız var mı? Giriş Yap</a>
    </div>
</form>
