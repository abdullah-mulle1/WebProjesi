@model Berber.ViewModels.GirisYapViewModel

<h2 class="text-center">Giriş Yap</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="GirisYap" method="post" class="mt-4">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adınızı Girin" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Parola" class="form-label">Parola</label>
        <input asp-for="Parola" class="form-control" type="password" placeholder="Parolanızı Girin" />
        <span asp-validation-for="Parola" class="text-danger"></span>
    </div>

    <div class="form-check mt-3">
        <input asp-for="BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="KayitOl" class="btn btn-link">Hesabınız yok mu? Kayıt Ol</a>
    </div>
</form>
