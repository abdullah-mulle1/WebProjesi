@model Berber.Models.Hizmet

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="HizmetEkle" method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ücret</label>
        <input asp-for="Ucrt" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Ucrt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Süre (Dakika)</label>
        <input asp-for="SrDk" class="form-control" type="number" />
        <span asp-validation-for="SrDk" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
