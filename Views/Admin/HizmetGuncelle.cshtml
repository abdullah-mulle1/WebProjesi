@model Berber.Models.Hizmet

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>Hizmet Güncelle</h2>

<form asp-action="HizmetGuncelle" method="post">
    <input type="hidden" asp-for="HizmetId" />
    <div class="form-group">
        <label for="Ad">Hizmet Adı</label>
        <input asp-for="Ad" class="form-control" id="Ad" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Ucret">Ücret</label>
        <input asp-for="Ucrt" class="form-control" id="Ucret" type="number" step="0.01" />
        <span asp-validation-for="Ucrt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SureDakika">Süre (Dakika)</label>
        <input asp-for="SrDk" class="form-control" id="SureDakika" type="number" />
        <span asp-validation-for="SrDk" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Hizmetler" class="btn btn-secondary">İptal</a>
</form>
