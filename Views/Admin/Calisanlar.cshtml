@model IEnumerable<Berber.Models.Calisan>

<h2>Çalışanlar Yönetimi</h2>
<a asp-action="YeniCalisan" class="btn btn-primary">Yeni Çalışan Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
            <th>Müsaitlik</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Ad</td>
                <td>@calisan.Uzmnlk</td>
                <td>@calisan.Mst</td>
                <td>
                    <a asp-action="DuzenleCalisan" asp-route-id="@calisan.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="SilCalisan" asp-route-id="@calisan.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
