@model Berber.Models.Calisan

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Çalışan Güncelle</h2>

<form asp-action="CalisanGuncelle" method="post">
    <input type="hidden" asp-for="CalisanId" />

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Başlangıç Saati</label>
        <input asp-for="SaatBaslangic" class="form-control" type="time" />
        <span asp-validation-for="SaatBaslangic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Bitiş Saati</label>
        <input asp-for="SaatBitis" class="form-control" type="time" />
        <span asp-validation-for="SaatBitis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hizmetler</label>
        <div>
            @foreach (var hizmet in ViewBag.Hizmetler as List<Berber.Models.Hizmet>)
            {
                <div class="form-check">
                    <input type="checkbox"
                           name="SelectedHizmetler"
                           value="@hizmet.HizmetId"
                           class="form-check-input"
                    @(Model.Hizmetler.Any(ch => ch.HizmetId == hizmet.HizmetId) ? "checked" : "") />
                    <label class="form-check-label" for="hizmet_@hizmet.HizmetId">@hizmet.Ad</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Calisanlar" class="btn btn-secondary">İptal</a>
</form>
