@model Berber.Models.Calisan
@{
    var hizmetler = ViewBag.Hizmetler as List<Berber.Models.Hizmet>;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="CalisanEkle" method="post">
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Başlangıç Saati</label>
        <input asp-for="SaatBaslangic" class="form-control" type="time" />
        <span asp-validation-for="SaatBaslangic" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Bitiş Saati</label>
        <input asp-for="SaatBitis" class="form-control" type="time" />
        <span asp-validation-for="SaatBitis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>İşlemler</label>
        <div>
            @foreach (var hizmet in hizmetler)
            {
                <div class="form-check">
                    <input type="checkbox" name="selectedHizmetler" value="@hizmet.HizmetId" class="form-check-input" id="hizmet_@hizmet.HizmetId" />
                    <label class="form-check-label" for="hizmet_@hizmet.HizmetId">@hizmet.Ad</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
