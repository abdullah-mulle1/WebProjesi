@model Calisan

<h2>Çalışan Güncelle</h2>

<form asp-action="CalisanGuncelle" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="CalisanId" type="hidden" />

    <div class="form-group">
        <label for="Ad">Ad</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SaatBaslangic">Saat Başlangıç</label>
        <input asp-for="SaatBaslangic" type="time" class="form-control" />
        <span asp-validation-for="SaatBaslangic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SaatBitis">Saat Bitiş</label>
        <input asp-for="SaatBitis" type="time" class="form-control" />
        <span asp-validation-for="SaatBitis" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="Calisanlar" class="btn btn-secondary mt-3">Geri Dön</a>
</form>
