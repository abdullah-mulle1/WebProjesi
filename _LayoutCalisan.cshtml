<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Çalışan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Calisan" asp-action="Profil">Çalışan Paneli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Calisan" asp-action="Profil">Profilim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Calisan" asp-action="Randevular">Randevular</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                    <a class="btn btn-outline-light btn-sm" asp-controller="Hesap" asp-action="CikisYap">Çıkış Yap</a>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item">
                                    <a class="btn btn-outline-light btn-sm" asp-controller="Hesap" asp-action="GirisYap">Giriş Yap</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="mt-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2024 - Berber - Çalışan Layout</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
