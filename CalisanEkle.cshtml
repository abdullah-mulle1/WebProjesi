@model Calisan

@{
    ViewData["Title"] = "Çalışan Ekle";
    var hizmetler = ViewBag.Hizmetler as List<Hizmet>;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Yeni Çalışan Ekle</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CalisanEkle" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="Ad">Ad</label>
                    <input asp-for="Ad" class="form-control" placeholder="Çalışan Adı" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="SaatBaslangic">Başlama Saati</label>
                    <input asp-for="SaatBaslangic" class="form-control" type="time" />
                    <span asp-validation-for="SaatBaslangic" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="SaatBitis">Bitiş Saati</label>
                    <input asp-for="SaatBitis" class="form-control" type="time" />
                    <span asp-validation-for="SaatBitis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <div class="input-group">
                        <input id="EmailPrefix" name="email" class="form-control" placeholder="Çalışan Email (prefix)" />
                        <span class="input-group-text">@@barber.com</span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Password">Şifre</label>
                    <input id="Password" name="password" class="form-control" placeholder="Şifre" type="password" />
                </div>

                <div class="form-group mb-3">
                    <label>Hizmetler</label>
                    <div>
                        @foreach (var hizmet in hizmetler)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedHizmetler" value="@hizmet.HizmetId" id="hizmet-@hizmet.HizmetId" />
                                <label class="form-check-label" for="hizmet-@hizmet.HizmetId">
                                    @hizmet.Ad
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Calisanlar" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
